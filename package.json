{
  "name": "mcp-toolbox-root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "act": "act workflow_dispatch -W .github/workflows/mcp-toolbox-sync.yml",
    "act:ci": "act push -W .github/workflows/ci.yml",
    "act:sync": "act workflow_dispatch -W .github/workflows/mcp-toolbox-sync.yml",
    "act:release": "act push -W .github/workflows/release.yml",
    "act:clean": "docker ps -a --filter 'name=act' --format '{{.ID}}' | xargs -r docker rm -f 2>/dev/null || true",
    "mcp-toolbox": "pnpm --filter mcp-toolbox exec mcp-toolbox",
    "mcp-toolbox-benchmark": "pnpm --filter @merl-ai/mcp-toolbox-benchmark benchmark"
  },
  "dependencies": {
    "@merl-ai/mcp-toolbox-runtime": "workspace:*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "turbo": "^2.7.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
