{
  "provider": {
    "kind": "openai",
    "model": "gpt-5.2",
    "apiKeyEnv": "OPENAI_API_KEY"
  },
  "pricing": {
    "input_per_1m": 3.0,
    "output_per_1m": 15.0
  },
  "runsPerTask": 2,
  "tasksFile": "scripts/context-metrics/tasks.json",
  "snapshotsDir": "toolbox/.snapshots",
  "syntheticToolsFile": "scripts/context-metrics/synthetic-tools.json",
  "outputDir": "context-metrics-runs-scaling",
  "modes": [
    {
      "name": "toolbox",
      "toolDefinitionScope": "taskToolsOnly"
    },
    {
      "name": "baseline-30",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 30
    },
    {
      "name": "baseline-50",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 50
    },
    {
      "name": "baseline-100",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 100
    },
    {
      "name": "baseline-150",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 150
    },
    {
      "name": "baseline-200",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 200
    },
    {
      "name": "baseline-500",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 500
    },
    {
      "name": "baseline-1000",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 1000
    },
    {
      "name": "baseline-2000",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 2000
    },
    {
      "name": "baseline-5000",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 5000
    },
    {
      "name": "baseline-10000",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 10000
    },
    {
      "name": "baseline-20000",
      "toolDefinitionScope": "scaledBaseline",
      "toolCount": 20000
    }
  ],
  "prompt": {
    "system": "You are a tool-using assistant. Available tools are listed below. When you respond, output only a JSON object with keys tool_name and arguments. Do not include any extra text.",
    "userSuffix": "Choose the best tool for the task and provide arguments."
  }
}
